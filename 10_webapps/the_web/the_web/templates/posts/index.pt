<div metal:use-macro="view.layout">
    <div metal:fill-slot="content">
              <div>There are ${len(all_posts)} posts to show</div>

        <div tal:repeat="p all_posts">
            <div id="posts">
                <div class="post">
                    <div class="title">${p.title}</div>
                    <div class="text">${p.text}</div>
                </div>
            </div>
        </div>

    </div>
</div>
